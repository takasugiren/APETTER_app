<div class='container'>
  <div class='row justify-content-center'>
    <h2 class="user-edit"><%= @user.name %>さん</h2>
  </div>
  <div class="row justify-content-center mt-3">
    <div class="user-back col-10">
      <div class="row">
        <div class="col-10">
          <%= link_to "", tweets_path, class: "browser-back far fa-arrow-alt-circle-left", style: "text-decoration: none; color: #444444;" %>
        </div>
        <div class="col-4">
          <%= attachment_image_tag @user, :profile_image, size: "200x200",fallback: "no_image.jpg", class:"effect" %>
        </div>
        <div class="col-3 mt-5">
          <i class="fas fa-users"></i>フォロー中 <%= @user.followings.count %><br>
          <div class="user-name mt-5">
            <%= @user.name %>
          </div>
        </div>
        <div class="col-3 mt-5">
          <i class="fas fa-users"></i>フォロワー <%= @user.followers.count %><br>
          <div class="mt-5">
            <% if @user.id != current_user.id %>
              <%= render "users/follow_btn", user: @user %>
            <% end %>
          </div>
        </div>
        <div class="col-2">
          <% if @user.id == current_user.id %>
            <i class="fas fa-user-edit"></i><%= link_to "編集", edit_user_path(@user), style: "text-decoration: none; color: #444444;" %>
          <% end %>
        </div>
        <div class="col-12 mt-3">紹介文<br>
          <div class="profile mt-2">
            <%= @user.profile %>
          </div>
        </div>
        <div class="col-3 mt-3">ランク帯<br>
          <div class="rank mt-2">
            <%= @user.rank %>
          </div>
        </div>
        <div class="col-2 mt-3 ">K/D<br>
          <div class="ratio mt-2">
            <%= @user.ratio %>
          </div>
        </div>
        <div class="col-7"></div>
        <h3 class="col-12 mt-5">ツイート</h3>
          <% @tweets.each do |tweet| %>
            <div class="col-2">
              <%= attachment_image_tag tweet.user, :profile_image, size: "100x100",fallback: "no_image.jpg", class:"effect" %>
            </div>
            <div class="col-6">
              <%= tweet.user.name %>
              <div class="mt-3">
                <%= tweet.body %>
              </div>
              <div class="mt-2">
                <%= attachment_image_tag tweet, :image, size: "540x250" %>
              </div>
            </div>
            <div class="tweet-created_at">
              <%= tweet.created_at.strftime("%Y年%m月%d日 %H:%M") %>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div