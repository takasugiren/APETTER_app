<div class="container-fluid">
  <div class="row justify-content-center">
    <h2 class="timeline"><i class="fas fa-search"></i> <%= @word %></h2>
  </div>
  <div class="row justify-content-center mt-4">
    <div class="col-12">
      <div class="tweet-back mx-5">
        <div class="tweet-image">
          <table class="table table-hover">
            <thead>
              <tr class="table-info">
                <th></th>
                <th>名前</th>
                <th>ランク帯</th>
                <th>キルレ</th>
                <th class="col-7">紹介文</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% users.each do |user| %>
              <tr>
                <td>
                  <%= link_to user_path(user) do %>
                    <%= attachment_image_tag user, :profile_image, size: "100x100",fallback: "guest-icon.jpg", class: "effect" %><br>
                  <% end %>
                </td>
                <td>
                  <%= user.name %>
                </td>
                <td>
                  <%= user.rank %>
                </td>
                <td>
                  <% if user.ratio != nil %>
                    <%= user.ratio %>
                  <% else %>
                    未登録
                  <% end %>
                </td>
                <td>
                  <%= user.profile %>
                </td>
                <td>
                  <% if user.id != current_user.id %>
                    <%= render "users/follow_btn", user: user %>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>