<!--自分の投稿に対するいいね、コメントは通知しない-->
<% if notifications = @notifications.where.not(visitor_id: current_user.id) %>
  <% if notifications.exists? %>
  <div class="container">
    <div class='row justify-content-center'>
      <h2 class="new-tweet mb-5"><i class="fas fa-bell"></i> お知らせ</h2>
    </div>
    <div class="row justify-content-center">
      <div class="col-10 notification-back">
        <div class="col-12 col-lg-12">
          <div><%= link_to "", tweets_path, class: "browser-back far fa-arrow-alt-circle-left", style: "text-decoration: none; color: #444444; margin-top: 10px"  %></div>
        </div>
        <%= render @notifications %>
        <div class="row justify-content-center">
          <div class="notification-paginate"><%= paginate @notifications %></div>
        </div>
      </div>
    </div>
  </div>
  <% else %>
  <div class="container">
    <div class="row justify-content-center mt-4">
      <div class="col-12 col-lg-10">
        <div class="white-back">
          <div class="col-12">
            <%= link_to "", tweets_path, class: "browser-back far fa-arrow-alt-circle-left", style: "text-decoration: none; color: #444444; margin-top: 10px" %>
          </div>
          <div class="nomember-back">
            <p class="nomember">お知らせがありません。</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
<% end %>