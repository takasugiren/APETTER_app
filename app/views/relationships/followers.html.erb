<% if @users.exists? %>
<div class="container">
  <div class="row justify-content-center">
    <div class="tag-search-title"><%= @user.name %> フォロワー <strong><%= @user.followers.count %></strong></div>
  </div>
  <div class="row justify-content-center">
    <div class="col-1"></div>
    <div class="col-10">
      <div class="tweet-back">
        <div class="col-12 col-lg-12">
          <%= link_to "", user_path(@user), class: "browser-back far fa-arrow-alt-circle-left", style: "text-decoration: none; color: #444444; margin-top: 5px;" %>
        </div>
        <div class="tweet-image">
          <% @users.each do |user| %>
          <div class="row mb-3 tweet-shadow">
            <div class="tweet-item col-2">
              <%= link_to user_path(user) do %>
                <%= attachment_image_tag user, :profile_image, size: "100x100",fallback: "guest-icon.jpg", class: "effect" %><br>
              <% end %>
            </div>
            <div class="tweet-item text-center col-2">
              <i class="fas fa-user"> 名前</i>
            </div>
            <div class="tweet-item col-2">
              <i class="fas fa-medal"> ランク帯</i>
            </div>
            <div class="tweet-item text-center col-2">
              <i class="fas fa-skull"> K/D</i>
            </div>
            <div class="col-4"></div>
            <div class="col-2"></div>
            <div class="col-2 tweet-item-sub">
              <%= user.name %>
            </div>
            <div class="col-2 tweet-item-sub">
              <%= user.rank %>
            </div>
            <div class="col-2 tweet-item-sub">
              <% if user.ratio != nil %>
                <%= user.ratio %>
              <% else %>
                未登録
              <% end %>
            </div>
            <div class="col-4 tweet-item-sub">
              <% if user.id != current_user.id %>
                <div class="tweet-created_at"><%= render "users/follow_btn", user: user %></div>
              <% end %>
            </div>
              <div class="col-2"></div>
            <div class="col-10 mt-2">
            </div>
            <div class="col-2"></div>
            <div class="col-10 mt-3">
              <% if user.profile != nil %>
                <%= user.profile %>
              <% else %>
                よろしくお願いします。
              <% end %>
            </div>
          </div>
          <% end %>
        </div>
        <div class="row justify-content-center my-4"><%= paginate @users %></div>
      </div>
    </div>
    <div class="col-1">
      <span class="back">
        <a href="#">
          <i class="fas fa-chevron-circle-up top-up fa-2x"></i>
        </a>
      </span>
    </div>
  </div>
</div>
<% else %>
<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="tag-search-title"><%= @user.name %> フォロワー <%= @user.followings.count %></div>
    <div class="col-12 col-lg-10">
      <div class="white-back">
        <div class="col-12">
          <%= link_to "", user_path(@user), class: "browser-back far fa-arrow-alt-circle-left", style: "text-decoration: none; color: #444444; margin-top: 10px;" %>
        </div>
        <div class="nomember-back">
          <p class="nomember-followers">まだフォローされていません。</p>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
