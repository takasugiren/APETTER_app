<% if user_signed_in? %>
  <%= form_with url: search_path, class: "form-inline", local: true, method: :get do |f| %>
    <%= f.text_field :word, class: "search-form", placeholder: "キーワードを入力" %>
    <%= f.select :range, options_for_select([['ユーザー'], ['ツイート'], ['タグ']]), {}, {class: "form-control ml-1"} %>
  <% end %>
<% end %>