<header>
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <% if user_signed_in? %>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ml-auto mt-3">
          <li class="mx-5">
            <i class="fas fa-user-circle"></i><%= link_to "マイページ", user_path(current_user.id), style: "text-decoration: none; color: white; font-family: 'DotGothic16', sans-serif;" %>
          </li>
          <li>
            <i class="fas fa-sign-out-alt"></i><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header-tab", style: "font-family: 'DotGothic16', sans-serif;" %>
          </li>
        </ul>
        <div class="ml-3 mt-3">
          <%= render "layouts/search" %>
        </div>
      </div>
      <% else %>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ml-auto">
          <li class="mx-3">
            <i class="fas fa-sign-in-alt"></i><%= link_to "ログイン", new_user_session_path, style: "text-decoration: none; color: white; font-family: 'DotGothic16', sans-serif;" %>
          </li>
          <li class="mx-3">
            <i class="fas fa-user-plus"></i><%= link_to "新規登録", new_user_registration_path, style: "text-decoration: none; color: white; font-family: 'DotGothic16', sans-serif;" %>
          </li>
        </ul>
      </div>
      <% end %>
    </div>
  </nav>
</header>