<div class="container">
  <div class="row justify-content-center">
    <div class="new-tweet">ツイート編集</div>
  </div>
  <div class="tweet-edit mt-5">
    <div class="row justify-content-center">
      <div class="col-12">
        <%= link_to "", tweet_path(@tweet), class: "browser-back far fa-arrow-alt-circle-left", style: "text-decoration: none; color: black;" %>
      </div>
      <div class="col-12 col-lg-9">
        <div class="mt-5">
          <%= attachment_image_tag @tweet, :image, size: "810x400", class: "tweet-image-edit", style: "border-radius: 8px;" %>
        </div>
        <%= render 'layouts/errors', obj: @tweet %>
        <%= form_with model: @tweet, local:true do |f| %>
          <div class="form-group mt-5">
            <h4 class="mt-3">ツイート内容</h4>
            <%= f.text_area :body, class: 'form-control tweet-body-edit' %>
          </div>
          <div class="form-group mt-5">
            <h4>ツイート画像</h4>
            <%= f.attachment_field :image, class: "form-control-file" %>
          </div>
          <div class="row justify-content-center">
            <div class="form-group col-5 mt-5">
              <%= f.submit 'ツイート更新', class: "btn btn-block btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>