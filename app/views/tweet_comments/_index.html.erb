<div class="row">
  <% @tweet.tweet_comments.each do |tweet_comment| %>
    <div class="comment-image col-3 col-lg-1">
      <%= link_to user_path(tweet_comment.user) do %>
        <%= attachment_image_tag tweet_comment.user, :profile_image, size: "50x50",fallback: "guest-icon.jpg", class: "effect" %>
      <% end %>
    </div>
    <div class="col-9 col-lg-11 tweet-show-comments">
      <%= tweet_comment.user.name %>
      <span class="ml-3"><%= tweet_comment.created_at.strftime("%Y年%m月%d日 %H:%M") %></span>
      <% if tweet_comment.user == current_user %>
        <span class="ml-4">
          <%= link_to "", tweet_tweet_comment_path(tweet_comment.tweet_id, tweet_comment.id), class: "fas fa-trash-alt", style: "color: red; font-size: 17px;", method: :delete, data: { confirm: '本当にコメントを消しますか？' }, remote: true %>
        </span>
      <% end %>
    </div>
    <div class="col-3 col-lg-1"></div>
    <div id="comment<%= tweet_comment.id %>" class="col-9 col-lg-11 mb-4 balloon-index">
      <div class="balloon"><%= tweet_comment.comment %></div>
    </div>
  <% end %>
</div>
